<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ac_detail_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kai.travelvietnamapp.AcDetailPlace">

    <include layout="@layout/app_toolbar" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_viewpaper" />

    <TextView
        android:id="@+id/namePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/top_vertical_margin"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/top_vertical_margin"
        android:layout_marginTop="@dimen/top_vertical_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/sz_icon_detail"
                android:layout_height="@dimen/sz_icon_detail_h"
                android:background="@drawable/address" />

            <TextView
                android:layout_marginLeft="@dimen/material_item_margin"
                android:id="@+id/addressPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_vertical_margin">

            <ImageView
                android:layout_width="@dimen/sz_icon_detail"
                android:layout_height="@dimen/sz_icon_detail_h"
                android:background="@drawable/description" />

            <TextView
                android:layout_marginLeft="@dimen/material_item_margin"
                android:id="@+id/descriptionVi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="vertical" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
