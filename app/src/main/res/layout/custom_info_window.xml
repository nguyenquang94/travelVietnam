<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="150dp"
    android:background="@drawable/layout_background_defect_report"
    android:orientation="horizontal"
    android:weightSum="5">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/imgPlace"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="100dp"
            android:id="@+id/tvNamePlace"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/material_item_margin"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:id="@+id/tvNameCategory"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/material_item_margin"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/material_item_margin"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_marginRight="@dimen/material_item_margin"
            android:layout_marginLeft="@dimen/material_item_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/nextpage" />
    </LinearLayout>

</LinearLayout>